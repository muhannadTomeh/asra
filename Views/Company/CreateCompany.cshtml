@using Asrati.ViewModels.CompanyViewModel
@model CompanyCreateViewModel

@{
    ViewData["Title"] = "Create Company";
}

<h2>@ViewData["Title"]</h2>
@Html.ValidationSummary(true, "Please fix the following errors:", new { @class = "text-danger" })

<form asp-action="CreateCompany" method="post">
    @Html.AntiForgeryToken()

    <!-- Company Name field -->
    <div class="form-group">
        <label asp-for="Name" class="control-label">Company Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Company Address field -->
    <div class="form-group">
        <label asp-for="Address" class="control-label">Company Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <!-- Phone Number for Owner -->
    <div class="form-group">
        <label asp-for="OwnerPhoneNumber" class="control-label">Owner Phone Number</label>
        <input asp-for="OwnerPhoneNumber" class="form-control" />
        <span asp-validation-for="OwnerPhoneNumber" class="text-danger"></span>
    </div>

    <!-- IsActive checkbox -->
    <div class="form-group">
        <label asp-for="IsActive" class="control-label">Active</label>
        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Company</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}