@model Asrati.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h2 class="mb-4">User Details</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">First Name</dt>
            <dd class="col-sm-8">@Model.FirstName</dd>

            <dt class="col-sm-4">Last Name</dt>
            <dd class="col-sm-8">@Model.LastName</dd>

            <dt class="col-sm-4">Role</dt>
            <dd class="col-sm-8">@Model.Role</dd>

            <dt class="col-sm-4">Phone Number</dt>
            <dd class="col-sm-8">@Model.PhoneNumber</dd>

            <dt class="col-sm-4">Is Active</dt>
            <dd class="col-sm-8">@(@Model.IsActive ? "Active" : "Inactive")</dd>

            <dt class="col-sm-4">Created At</dt>
            <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>

            <dt class="col-sm-4">Updated At</dt>
            <dd class="col-sm-8">@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <!-- Delete Button -->
            <form method="post" action="@Url.Action("DeleteConfirmed", "Users", new { id = Model.Id })" onsubmit="return confirm('Are you sure you want to delete this user?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete User
                </button>
            </form>

            <!-- Activate/Deactivate Button -->
            <form method="post" action="@Url.Action("ToggleActive", "Users", new { id = Model.Id })">
                <button type="submit" class="btn @(Model.IsActive ? "btn-warning" : "btn-success")">
                    <i class="fas fa-toggle-@(@Model.IsActive ? "off" : "on")"></i> 
                    @(Model.IsActive ? "Deactivate" : "Activate") Account
                </button>
            </form>
        </div>

        <!-- Back Button -->
        <a href="@Url.Action("Index", "Users")" class="btn btn-secondary mt-3">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
