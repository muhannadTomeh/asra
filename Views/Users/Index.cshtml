@model IEnumerable<Asrati.Models.User>

@{
    ViewData["Title"] = "Users List";
}

<h2>Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Role</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <a href="@Url.Action("Edit", "Users", new { id = user.Id })">Edit</a> |
                    <a href="@Url.Action("Details", "Users", new { id = user.Id })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Users")" class="btn btn-primary">Create New User</a>
