@using Asrati.ViewModels.UserViewModel
@model UserDetailsViewModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- User Card -->
    <div class="card mb-4 shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title"><i class="fas fa-user-circle"></i> User Information</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Username:</strong> @Model.UserName</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Status:</strong> @(Model.IsActive ? "Active" : "Inactive")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between mt-3">
        <a href="@Url.Action("ListUsers", "User")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to User List</a>
        <a href="@Url.Action("ChangePasswordRequest", "Account")" class="btn btn-warning text-white"><i class="fas fa-key"></i> Change Password</a>
    </div>
</div>

<!-- Add Font Awesome for icons (optional) -->
@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
